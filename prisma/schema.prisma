// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id               Int      @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String   @unique
  graduationYear   Int
  phoneNumber      String?
  promisingStudent Boolean  @default(false)
  schoolOrg        String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  address          String?
  city             String?
  state            String?
  zipCode          String?
}